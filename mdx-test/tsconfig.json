{
    "compilerOptions": {
        "target": "ES2021",
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "noImplicitAny": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "composite": true,
        "jsxImportSource": "solid-js",
        "lib": [
            "esnext"
        ],
        "outDir": "build"
    },
    "exclude": [
        "node_modules",
        "build"
    ],
    "include": [
        "src"
    ],
    "mdx": {
        "plugins": [
            "remark-math",
            "remark-frontmatter",
            "remark-directive",
            "@hellomouse/remark-mdx-glue"
        ]
    }
}
