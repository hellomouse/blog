{
    "compilerOptions": {
        "target": "ES2022",
        "allowJs": true,
        "checkJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "noImplicitAny": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "Node16",
        "moduleResolution": "Node16",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "composite": true,
        "lib": [
            "esnext"
        ],
        "outDir": "build"
    },
    "exclude": [
        "node_modules",
        "build"
    ],
    "include": [
        "src"
    ]
}
